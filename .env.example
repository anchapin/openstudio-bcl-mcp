# Environment variables for OpenStudio MCP Server

# Node.js Environment
NODE_ENV=development
PORT=3000
HOST=localhost

# OpenStudio Configuration
OPENSTUDIO_CLI_PATH=openstudio
OPENSTUDIO_WORKING_DIR=./workspace
OPENSTUDIO_TIMEOUT=300000
OPENSTUDIO_MAX_CONCURRENT_JOBS=3
OPENSTUDIO_PATH=/usr/local/openstudio

# Logging
LOG_LEVEL=info
LOG_FORMAT=simple

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Storage Paths
MODELS_PATH=./data/models
RESULTS_PATH=./data/results
TEMP_PATH=./data/temp

# Redis Configuration (if using)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Performance Settings
MAX_REQUEST_SIZE=10mb
COMPRESSION_THRESHOLD=1024

# Development Settings
DEBUG_MCP_CALLS=false
SIMULATION_DATA_VOLUME=/var/simdata/openstudio